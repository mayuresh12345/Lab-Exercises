#include "mpi.h"
#include <stdio.h>

int main(int argc, char* argv[])
{
	int rank, size, N, A[100];
	int i, j;
	MPI_Init(&argc, &argv);
	int len;

	MPI_Comm_rank(MPI_COMM_WORLD, &rank);
	MPI_Comm_size(MPI_COMM_WORLD, &size);
	char str[100];
	if(rank == 0)
	{
		printf("Enter a string: ");
		gets(str);
		len = strlen(str);
	}

	MPI_Finalize();
}
